<com.xiemarc.marcreading.recycleview.swipe.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:scrollbars="vertical|horizontal" />
    <!--空试图-->
    <FrameLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    <!--加载中-->
    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    <!--错误视图-->
    <FrameLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    <!--提示-->
    <TextView
        android:id="@+id/tvTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tip"
        android:gravity="center"
        android:padding="5dp"
        android:text="似乎没有网络哦"
        android:textColor="@color/white"
        android:visibility="gone" />

</com.xiemarc.marcreading.recycleview.swipe.SwipeRefreshLayout>